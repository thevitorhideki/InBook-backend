{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": "../",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "^@database/(.*)$": "<rootDir>/src/database/$1",
    "^@helpers/(.*)$": "<rootDir>/src/helpers/$1",
    "^@logging/(.*)$": "<rootDir>/src/logging/$1",
    "^@modules/(.*)$": "<rootDir>/src/modules/$1",
    "^@test/(.*)$": "<rootDir>/test/$1"
  },
  "testEnvironment": "node"
}
